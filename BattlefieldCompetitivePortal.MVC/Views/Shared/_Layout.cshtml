<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Battlefield Portal</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/signalr-2.4.3.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                Battlefield Portal
            </a>

            <div class="navbar-nav ml-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="notificationDropdown"
                       data-toggle="dropdown">
                        <i class="fas fa-bell"></i>
                        <span id="notificationCount" class="badge badge-danger">0</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" id="notificationList">
                        <!-- Notifications loaded via AJAX -->
                    </div>
                </div>

                <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="~/Scripts/app/notifications.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
